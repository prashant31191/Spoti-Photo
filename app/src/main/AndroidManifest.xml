<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="co.cdmunoz.spotiphoto">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="co.cdmunoz.spotiphoto.topArtists.TopArtistsActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="co.cdmunoz.spotiphoto.topArtists.TopArtistsSettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/ToolbarColoredBackArrow"/>
        <activity
            android:name="co.cdmunoz.spotiphoto.topTenSongs.TopTenSongsActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name="co.cdmunoz.spotiphoto.common.CommonImageActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>